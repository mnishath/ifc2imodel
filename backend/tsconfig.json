{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./src/types", 
      "./node_modules/@types"
    ]
  },
  "include": ["src/**/*"]
}